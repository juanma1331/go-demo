package layouts

import (
	"go-demo/views/components/icons"
)

templ CartCount() {
	<div class="flex items-center gap-2 bg-slate-200 py-1 px-2 rounded-md shadow-md">
		<div
			data-cart-count
			class="text-sm font-semibold text-slate-900"
			_="on cart_updated from body set result to event.detail.value as an Object
				then put result.quantity into me"
		>
			0
		</div>
		@icons.Cart()
	</div>
}
